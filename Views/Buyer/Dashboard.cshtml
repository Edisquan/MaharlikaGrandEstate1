@{
    ViewData["Title"] = "Buyer Dashboard";
}

<h2>Buyer Dashboard</h2>

<div class="row">
    <div class="col-md-6">
        <div class="card bg-success text-white mb-3">
            <div class="card-body">
                <h5 class="card-title">My Inquiries</h5>
                <p class="card-text">You have submitted @ViewBag.InquiriesCount inquiries.</p>
                <a class="btn btn-light" asp-controller="Buyer" asp-action="Browse">Browse Properties</a>
            </div>
        </div>
    </div>
</div>
